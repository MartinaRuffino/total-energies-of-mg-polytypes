---------------- MnN, Wurtzite structure ----------------
SYMGRP  R6Z:(1/sqrt(3),0,q/2) MY
STRUC   NBAS=8/1 NSPEC=4/1 NL=3 ALAT=a
        PLAT= 0 -1 0   sqrt(3)/2 1/2 0   0 0 q ELINK=-2 TET=tet
        SLAT= 0 -1 0   sqrt(3)/2 1/2 0   0 0 q*2
SPEC
% ifdef lmf
        SCLWSR=T OMAX1=0,0,0 OMAX2=0,0,0
% endif
        ATOM=C1  Z=25 R/W=rwc EREF=-2312.6092 A=0.03
        RSMH=1.5,1.5,0.9 EH=-.1,-.1,-.1
        RSMH2=0,1.5,0.9  EH2=-1,-1,-1
        ATOM=A1  Z=7  R/W=rwa EREF=-108.3613 IDXDN=1 1 {idx} LMX={lmxn} A=0.03
        RSMH=1,1,1 EH=-.1,-.1,-.1
        RSMH2=1,1  EH2=-1,-1,-1
% if idx==3
        ALPHA= 0.28723 0.02582 -.02
%endif
        ATOM=EC1 Z=0  R/W=rwec IDXDN=1 {idx} {idx2} A=0.03
% ifdef idx==3 | idx2==3
        ALPHA= 0.28723 0.02582 -1d-4
%endif
        ATOM=EA1 Z=0  R/W=rwea IDXDN=1 1 {idx} A=0.03
        RSMH=1.5,1.5 EH=-.1,-.1,-.1
SITE    ATOM=C1  POS= 0              0   0*q
        ATOM=C1  POS= 1/sqrt(3)      0   1/2*q
        ATOM=A1  POS= 0              0   5/8*xx*q
        ATOM=A1  POS= 1/sqrt(3)      0   5/8*xx*q-q/2
        ATOM=EC1 POS= 0              0   5/16*xx*q
        ATOM=EC1 POS= 1/sqrt(3)      0   (5/8*xx+1)/2*q
        ATOM=EA1 POS= 1/sqrt(3)/2  -.5   5/16*xx*q
        ATOM=EA1 POS= 1/sqrt(3)/2  -.5   (5/8*xx+1)/2*q
CONST   a=6.03024575 bzj=1 q=1.627 tet=1 nk=6 nk2=nk/2 nit=0 alatj=a
        xwz=.006 xx=1-xwz/2
        rwc=1.11 rwa=.92 rwea=1.16 rwec=.67
