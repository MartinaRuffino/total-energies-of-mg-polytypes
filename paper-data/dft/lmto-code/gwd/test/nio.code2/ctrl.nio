# Autogenerated from init.nio using:
# blm --rdsite=site0 --nit=20 --nk=6 --gmax=11 --mag --nkgw=4 --gw nio

# Variables entering into expressions parsed by input
% const nit=20
% const metal=5
% const nsp=2 so=0
% const lxcf=2 lxcf1=0 lxcf2=0     # for PBE use: lxcf=0 lxcf1=101 lxcf2=130
% const pwmode=0 pwemax=3          # Use pwmode=1 or 11 to add APWs
% const sig=12 gwemax=2.5 gcutb=2.7 gcutx=2.2  # GW-specific
% const nkabc=6 nkgw=4 gmax=11 beta=.3

VERS  LM:7 FP:7 # ASA:7
IO    SHOW=f HELP=f IACTIV=f VERBOS=31,20  OUTPUT=*
EXPRESS
# Lattice vectors and site positions
  file=   site

# Basis set
  gmax=   {gmax}                   # PW cutoff for charge density
  # autobas[pnu=1 loc=1 mto=4 lmto=5 gw=1 pfloat=2,1]
  autobas[pnu=1 loc=1 mto=4 lmto=5 gw=0 pfloat=40,0 xqloc=.004]

# Self-consistency
  nit=    {nit}                    # Maximum number of iterations
  mix=    B2,b={beta},k=7          # Charge density mixing parameters
  conv=   1e-5                     # Convergence tolerance (energy)
  convc=  3e-5                     # tolerance in RMS (output-input) density

# Brillouin zone
  nkabc=  {nkabc}                  # 1 to 3 values
  metal=  {metal}                  # Management of k-point integration weights in metals

# Potential
  nspin=  {nsp}                    # 2 for spin polarized calculations
  so=     {so}                     # 1 turns on spin-orbit coupling
  xcfun=  {lxcf},{lxcf1},{lxcf2}   # set lxcf=0 for libxc functionals

#SYMGRP i*r3d r2(1,0,-1)

% const loptic=0 lteto=3 mefac=1
OPTICS  MODE={loptic} NPTS=3001 WINDOW=0 3 ESCISS=0 LTET={lteto}
        FILBND=1,22*{so==1?2:1} EMPBND=22*{so==1?2:1}+1,50*{so==1?2:1}
        MEFAC={mefac}

HAM
      AUTOBAS[PNU=0 LOC=0 MTO=0 LMTO=0 GW=0 PFLOAT=0,0 xQLOC=.004]
      PWMODE={pwmode} PWEMIN=0 PWEMAX={pwemax} OVEPS=0 # For APW addition to basis
      FORCES={so==0} ELIND=-0.7 
      RDSIG={sig} SIGP[EMAX={gwemax}]  # Add self-energy to LDA
GW    NKABC={nkgw} GCUTB={gcutb} GCUTX={gcutx} DELRE=.01 .1 
      GSMEAR=0.003 PBTOL=3e-4,3e-4,1e-3
EWALD AS=2.0 TOL=1D-10 ALAT0=a # NKRMX=400 NKDMX=400
SPEC
        ATOM=C1 Z=28 LMXA=4 RS3=0.8
        R=2.13394245 A=.015 EREF=-3036.182
        ATOM=B1 Z=28 LMXA=4 RS3=0.8
        R=2.13394245 A=.015 EREF=-3036.182
        ATOM=A1 Z=8  LMXA=4
        R=1.64895554 A=.015 EREF=-149.1822
