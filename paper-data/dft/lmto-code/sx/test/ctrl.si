HEADER  Si in diamond lattice
VERS    LMASA-6
% const tim=f
IO      SHOW=F HELP=F VERBOS=50 IACTIV=f TIM={tim}
% const twoc=t ccor=f sx=3
% ifdef sxopts
% else
%   char sxopts
% endif
OPTIONS NSPIN=1 CCOR={ccor} ADNF=T TWOC={twoc} t
% ifdef sx
        SX={sx} SXOPTS={sxopts} Q=BAND
% endif
CONST   nk=4 nit=0
SYMGRP  R4X*I R3D I:T(.25,.25,.25)
EWALD   TOL=1d-12 NKDMX=500
BZ      NKABC=nk METAL=f TOL=1D-4 NOINV=t NEVMX=999 EFMAX=99
STR     RMAX=2.9
STRUC   NBAS=4 NCLASS=2 NL=3
        ALAT=10.26 PLAT=  0 .5 .5  .5  0 .5  .5 .5  0
CLASS   ATOM=SI  Z=14  R/W=1  LMX=2  CONF=3 3 3 IDXDN=1 1 1
        ATOM=ES  Z= 0  R/W=1  LMX=2  CONF=1 2 3 IDXDN=1 1 1
SITE    ATOM=SI POS=  0   0   0
        ATOM=SI POS= .25 .25 .25
        ATOM=ES POS= .5  .5  .5
        ATOM=ES POS= .75 .75 .75
START   NIT=nit BROY=T WC=3.0 NMIX=2 BETA=.0 CNVG=1.D-5 CNVGET=1.D-5
        FREE=F BEGMOM=nit==0 CNTROL=t
