echo --- slatsm-to-linuxi : customization for Intel Linux ---

if ($FC == f95 || $FC == gfortran) then
  echo '... slatsm-to-linuxi : patch test programs test/tdqinv.f and test/tyqinv.f'
  cp tests/tdqinv.f tests/tdqinv.for
  ccomp -dgfortran tests/tdqinv.for tests/tdqinv.f
  cp tests/tyqinv.f tests/tyqinv.for
  ccomp -dgfortran tests/tyqinv.for tests/tyqinv.f

  if (-e r1mach.f && -e startup/r1mach.gfortran.o ) then
    echo ' ... slatsm-to-linuxi : use object file startup/r1mach.gfortran.o'
    cp startup/r1mach.gfortran.o r1mach.o
    ar rv slatsm.a r1mach.o
    rm r1mach.o
  endif

else
  cp -p startup/f2c.LINUXI.h f2c.h
  source slatsm-to-linux_g77
endif

