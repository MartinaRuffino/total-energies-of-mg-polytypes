echo --- slatsm-to-sun: ccomp to SUN-specific ---

foreach i (cpudel.f cmdopt.f)
cp $i $i:r.fortran
ccomp -uAIX -uAPOLLO -uCONVEX -uCRAY -uDEC -uHP -uLINUX -uSGI -dSUN $i:r.fortran $i 
end

foreach i (dqinv.f dqinvb.f yyqinv.f yysbnv.f)
  rm -f xx.f ; mv $i xx.f
  ccomp -dSUN-ULTRA xx.f $i
end

rm -f main.f
cat > main.f <<EOF
      program main
      end
EOF

if (-e fmain.f) mv -f fmain.f fmain.fortran
rm -f xx.f
