echo --- slatsm-to-aix90: ccomp to AIX-specific ---

rm -f xx.f
foreach i ( `egrep -l '^[Cc]#.*if.*AIX' *.f` )
  rm -f xx.f ; ccomp -uAIX $i xx.f
  ccomp -dAIX xx.f $i
end

rm -f xx.f
foreach i ( ` grep -l BLAS3 *.f `)
  rm -f xx.f ; ccomp -uBLAS3 $i xx.f
  ccomp -dBLAS3 xx.f $i
end

rm -f xx.f
foreach i ( ` grep -l BLAS3 *.f `)
  rm -f xx.f ; ccomp -uBLAS3 $i xx.f
  ccomp -dBLAS3 xx.f $i
end

rm -f xx.f
foreach i ( ` grep -l AIX-xlf90 *.f `)
  rm -f xx.f ; ccomp -uAIX-xlf90 $i xx.f
  ccomp -dAIX-xlf90 xx.f $i
end

rm -f xx.f ; ccomp -uAIX cpudel.f xx.f
ccomp -dAIX -uAPOLLO -uCONVEX -uCRAY -uDEC -uHP -uSGI -uSUN xx.f cpudel.f

echo : ccomp -dBLAS for the following files: `egrep -l 'ifdefC *BLAS *$' *.f`
foreach i ( `egrep -l 'ifdefC *BLAS *$' *.f` )
  rm -f xx.f ; ccomp -uBLAS $i xx.f; ccomp -dBLAS xx.f $i; rm xx.f
end

if (-e fmain.f) mv -f fmain.f fmain.fortran

set DORISC
#set NOSLATSM = ( {zgemm,dgemm,dspdi,dsisl,dsifa,dsi}.f )
set NOSLATSM = ( {zgemm,dgemm}.f )

rm -f xx.f
