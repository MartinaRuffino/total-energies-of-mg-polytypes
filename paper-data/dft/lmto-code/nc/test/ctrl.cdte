# --- Test of spin-orbit coupling, CdTe ---
% const nc=f so=t nl=3 idx=1 soscl=1 pdos=f
% save soscl
TEST    lmstr cdte >/dev/null
        lm -vso=t cdte -vnit=1 --mixonlyp --no-iactiv 
        lm -vso=t cdte --no-iactiv -vnit=-1
        rm mixm.cdte
        lm -vso=t cdte --no-iactiv -vsoscl=1/2
TSTPDOS lmstr cdte >/dev/null
        lm    --noinv --soc -vso=t -vpdos=t cdte --pdos
        lmdos --noinv --soc -vso=t -vpdos=t cdte --pdos --dos:npts=2001:window=-1.2,.5
        echo 8 5 -1.0 .4 | pldos -fplot -lst='1;3;5;7;9;11;13;15;17' -lst2 dos.cdte
%ifdef pdos
SYMGRP  I*I
%endif
SYMGRP  R4Z*I MX*I R3D SOC
STRUC   NBAS=4 NSPEC=4 NL={nl} ALAT=12.25
        PLAT= 0 .5 .5    .5 0 .5    .5 .5 0
SITE    ATOM=C1  POS=  0   0   0
        ATOM=A1  POS= .25 .25 .25
        ATOM=EA1 POS= .50 .50 .50
        ATOM=EC1 POS= .75 .75 .75
CLASS   ATOM=C1  Z=48 R/W=1 A=.01 EREF=-11178.8931 IDMOD=0 0 0 1 IDXDN=1 1 1 {idx}
        ATOM=A1  Z=52 R/W=1 A=.01 EREF=-13577.3544 IDMOD=0 0 0 1 IDXDN=1 1 1 {idx}
        ATOM=EA1 Z=0  R/W=1 A=.01  IDXDN=1 1 {idx} {idx}
        ATOM=EC1 Z=0  R/W=1 A=.01  IDXDN=1 1 {idx} {idx}
#         HFAC[L={soscl}]
BZ      NKABC=6 6 6 BZJOB=0 INVIT=F
        TETRA={pdos?1:0} METAL={pdos?3:1} DOS=-1.5 0.5 EF0=0 DELEF=.1
STR     RMAX=2.9 EQUIV=T
EWALD   AS=2.0 TOL=1D-8 ALAT0=a NKRMX=400 NKDMX=400
HAM     NSPIN=2 REL=t NONCOL={nc|so} SO={so} QASA=0 XCFUN=2 SOSCAL=1 
OPTIONS NSPIN=2 REL=t TPAN=1 XCN=0 XCFUN=2 LMH=0 ASA[ADNF=f CCOR=t] SHARM=F
        NONCOL={nc|so} SO={so}
MAP     F  *: \h\t:g
IO      SHOW=f HELP=f VERBOS=41 WKP=F
HARRIS  RC=5 WIDTH=1/2.5 RHO=t EFIT=-1/10 -1/2 -1 -2 -4 -6
VERS    LMFP-4.0 LMASA-6 LM:7 ASA:7
% const nit=1
ITER    NIT={abs(nit)} CONVC=1d-5 CONV=0
