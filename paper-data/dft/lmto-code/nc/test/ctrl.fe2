JOBCOLL lmstr fe2 -vnit=-1 -vfile=2 -vnc=f
        lm fe2 -vnit=-1 -vfile=2 -vnc=f --pr41,20
JOBNC1  rm -f eula.fe2 bfield.fe2
        rdfile -vth=5 eula0.fe2 > eula.fe2
        lm fe2 -vnit=-1 -vfile=2 -vnc=t -vbf=f --pr41,20
JOBNC2  rm -f eula.fe2 bfield.fe2
        rdfile '-vbx=-.0012/2' b0.fe2 > bfield.fe2
        lm fe2 -vnit=-1 -vfile=2 -vnc=t -vbf=t --pr41,20
JOBNC3  rm -f eula.fe2 bfield.fe2
# this one l-independent
        rdfile -vth=5 -vneula=3 eula0.fe2 > eula.fe2
        rdfile '-vbx=-.0012/2' -vnbf=3 b0.fe2 > bfield.fe2
# this one l-dependent.  should produce same result as l-independent
#       rdfile '-vbx=-.0012/2' -vnbf=3 b0.fe2 > bfield.fe2
# this one lm-dependent
#       rdfile '-vbx=-.0012/2' -vnbf=9 b0.fe2 > bfield.fe2
        lm fe2 -vnit=-1 -vfile=2 -vnc=t -vbf=2 --pr41,20
JOBNC4  rm -f eula.fe2 mixm.fe2
        echo 0 0 0.001 > bfield.fe2
        echo 0 0 0.000 >> bfield.fe2
        echo ' ' site shifts > vshft.fe2
        echo '1    0.00126' >> vshft.fe2
        echo '2    0.001*0' >> vshft.fe2
        lm fe2 -vnit=-1 -vfile=2 -vnc=t -vbf=t -vvshft=t --pr31,20
JMPNC3  rm -f eula.fe2 bfield.fe2
# this one l-independent
        rdfile -vth=5 -vneula=3 eula0.fe2 > eula.fe2
        rdfile '-vbx=-.0012/2' -vnbf=3 b0.fe2 > bfield.fe2
# this one l-dependent.  should produce same result as l-independent
#       rdfile '-vbx=-.0012/2' -vnbf=3 b0.fe2 > bfield.fe2
# this one lm-dependent
#       rdfile '-vbx=-.0012/2' -vnbf=9 b0.fe2 > bfield.fe2
        mpirun -n 8 lm -vmet=3 fe2 -vnit=-1 -vfile=2 -vnc=t -vbf=2 --pr41,20
JMPNC4  rm -f eula.fe2 mixm.fe2
        echo 0 0 0.001 > bfield.fe2
        echo 0 0 0.000 >> bfield.fe2
        echo ' ' site shifts > vshft.fe2
        echo '1    0.00126' >> vshft.fe2
        echo '2    0.001*0' >> vshft.fe2
        mpirun -n 8 lm fe2 -vnit=-1 -vmet=3 -vfile=2 -vnc=t -vbf=t -vvshft=t --pr31,20
ENDJOBS
