HEADER  cubic GaN
VERS    LMASA-6.0 LMASA:7 LM:7 ASA:7
VERS    LMASA-4.0
IO      SHOW=f HELP=f VERBOS=30 WKP=F IACTIV=t SHOMEM=1
TESTTET lmstr ogan
        lm ogan --no-iactive -vlteto=3 -vsharm=2
 	cp opt.ogan opt.ogan-sh2
        lm ogan --no-iactive -vlteto=3 -vsharm=1
 	cp opt.ogan opt.ogan-sh1
        lm ogan --no-iactive -vlteto=3 -vsharm=0
TESTNWT lmstr ogan 
        lm ogan --no-iactive -vlteto=2
TSTJDS3 lmstr ogan 
        lm ogan --no-iactive -vlteto=3 -voptmod=-1
TSTJDSK lmstr ogan 
        lm ogan --no-iactive -vlteto=3 -voptmod=-1 -vlpart=2
TSTOPT3 lmstr ogan 
        lm ogan --no-iactive -vlteto=3 -voptmod=1 -vlpart=1
        mv popt.ogan popt-tet3.ogan
        lm ogan --no-iactive -vlteto=3 -voptmod=1 -vlpart=2
TESTSAM lmstr ogan
        lm ogan --no-iactive -vlteto=0 -voptmod=1
TESTABS lmstr ogan
        lm ogan --no-iactive -vlteto=0 --pr31,30 -vhires=t -voptmod=8
        mv opt.ogan opt-abs.ogan
        lm ogan --no-iactive -vlteto=0 --pr31,30 -vhires=t -voptmod=9
        mv opt.ogan opt-lum.ogan
HAM     NSPIN=1 REL=t QASA=0
% const sharm=0
OPTIONS NSPIN=1  REL=t LMH=F Q=BAND TINVIT=t ASA[ CCOR=t ADNF=F GAMMA=f ]
        SHARM={sharm}
# SYMGRP  R4X MX R3D
BZ      METAL=(lteto==-1?3:1) TETRA=t GETQP=f DOSWT=T NPTS=400 DRNGE=-1.1 1. 
%ifdef hires
        N=1 W=.005
%else
        N=2 W=.03
%endif
        TOL=1E-6 NEVMX=36 EFMAX=3  NKABC=nk nk nk BZJOB=f INVIT=f 
#        NOINV=t
% const lteto=2 hires=f
OPTICS  MODE=optmod NPTS=100 WINDOW=0 1 ESCISS=0 LTET={lteto}
#       Start occ at 6 because states 1..5 are > 1 Ry below CB
#       Start unoccc at 10 (1st unocc state); end at 16 (higher states >1Ry)
        FILBND=6,9 EMPBND=10 16 
        KT=.002 IMREF=0 .16 # VB slightly below VBM, CB slightly above
% const lpart={lteto==1|lteto==3}
        PART={lpart}
STR     RMAX=3.05
.MASTER  a=8.50
        JOB 1 aj=a*0.950
        JOB 2 aj=a*0.975
        JOB 3 aj=a*1.000
        JOB 4 aj=a*1.025
        JOB 5 aj=a*1.050
CONST   a=8.5037 nk={hires?64:20} optmod=1
STRUC   NBAS=4 NSPEC=4 NL=3
        ALAT=a PLAT=  0 .5 .5  .5  0 .5  .5 .5  0
SITE    ATOM=GA POS=  0   0   0
        ATOM=N POS= .25 .25 .25
        ATOM=E1 POS= .50 .50 .50
        ATOM=E2 POS= .75 .75 .75
# LM:7 : default A is different; need set explicitly for backward compatibility
CLASS   ATOM=GA  Z=31  R/W=1  IDXDN=1 1 1 A=.03
        ATOM=N   Z=7   R/W=1  IDXDN=1 1 1 A=.03
        ATOM=E1  Z=0   R/W=1  IDXDN=1 1 1 A=.03
        ATOM=E2  Z=0   R/W=1  IDXDN=1 1 1 A=.03
.ITER    MIX=B NIT=1 CONVC=1E-6 CONV=0
.MIX     MODE=B
ITER    NMIX=2 BETA=1 NIT=1 CONVC=1E-6 CONV=0
