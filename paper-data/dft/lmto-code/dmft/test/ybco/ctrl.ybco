TSTDMFT lmfdmft ctrl.ybco -vnkabc=8 --job=1 --ldadc=78,78 -vindmfl=f
TMPDMFT mpirun -n 6 lmfdmft ctrl.ybco -vnkabc=8 --job=1 --ldadc=78,78 -vindmfl=f
# Autogenerated from init.ybco using:
# blm ybco --gw

# Variables entering into expressions parsed by input
% const nit=100
% const met=5
% const so=0 nsp=so?2:1
% const lxcf=2 lxcf1=0 lxcf2=0     # for PBE use: lxcf=0 lxcf1=101 lxcf2=130
% const pwmode=0 pwemax=3          # Use pwmode=1 or 11 to add APWs
% const sig=12 gwemax=2.49 gcutb=3.1 gcutx=2.5  # GW-specific
% const nkabc=15 nkgw=3 gmax=9.8 beta=.3

VERS  LM:7 FP:7 # ASA:7
IO    SHOW=f HELP=f IACTIV=f VERBOS=35,35  OUTPUT=*
EXPRESS
# Lattice vectors and site positions
  file=   site

# Basis set
  gmax=   {gmax}                   # PW cutoff for charge density
  autobas[pnu=1 loc=1 mto=4 lmto=5 gw=1 pfloat=2,1]

# Self-consistency
  nit=    {nit}                    # Maximum number of iterations
  mix=    B2,b={beta},k=7          # Charge density mixing parameters
  conv=   1e-5                     # Convergence tolerance (energy)
  convc=  3e-5                     # tolerance in RMS (output-input) density

# Brillouin zone
  nkabc=  {nkabc}                  # 1 to 3 values
  metal=  {met}                    # Management of k-point integration weights in metals

# Potential
  nspin=  {nsp}                    # 2 for spin polarized calculations
  so=     {so}                     # 1 turns on spin-orbit coupling
  xcfun=  {lxcf},{lxcf1},{lxcf2}   # set lxcf=0 for libxc functionals

#SYMGRP i r2z r2y
HAM
      PWMODE={pwmode} PWEMIN=0 PWEMAX={pwemax} OVEPS=0 # For APW addition to basis
      FORCES={so==0} ELIND=-0.7
      RDSIG={sig} SIGP[EMAX={gwemax}]  # Add self-energy to LDA
GW    NKABC={nkgw} GCUTB={gcutb} GCUTX={gcutx} DELRE=.01 .1
      GSMEAR=0.003 PBTOL=3e-4,3e-4,1e-3

SPEC
  ATOM=Y        Z= 39  R= 2.899442  LMX=3 LMXA=4 PZ=0,0,5.4
  ATOM=Ba       Z= 56  R= 3.300000  LMX=3 LMXA=4
  ATOM=Cu       Z= 29  R= 1.878628  LMX=3 LMXA=4 PZ=0,0,4.4
  ATOM=O        Z=  8  R= 1.618623  LMX=3 LMXA=4

DMFT    PROJ=2 NLOHI=20,70 BETA=50 NOMEGA=999 KNORM=0
#       BROAD=1/1000
% const indmfl=t
% ifndef indmfl
        BLOCK:
        SITES=4
        L= 2
        # SIDXD= 1 2 3 4 5
        SIDXM=
        1 0 0 0 0
        0 2 0 0 0
        0 0 3 0 0
        0 0 0 4 0
        0 0 0 0 5
        # UMODE= 11
        # UMODE= full~static

        BLOCK[
        SITES=5,6
        L= 2
        QSPLIT= 9
        SIDXD= 6,7,8,9,10
        SIDXD= 10,9,8,7,6,11,12
        SIDXM=
        1 0 0 0 0
        0 2 0 0 0
        0 0 3 0 0
        0 0 0 4 0
        0 0 0 0 5
        UMODE= full
        ]
% endif
