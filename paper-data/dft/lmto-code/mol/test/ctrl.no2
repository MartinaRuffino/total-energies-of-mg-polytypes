% const show=F help=F
% const nsp=2 rel=T frz=F xcf=2 gga=0
% const verb=30 xcqs=1
% const dyn=0 nit=100 temp=300 reltime=80 time=1000
% const relax=0 xtol=1d-4 gtol=1d-4 step=0.01 hess=0 nitf=100
% const tstep=2 qrtol1=1d-6 qrtol2=1d-6 beta1=0.2 beta2=0.2 etol=1d-5
% const lxio=35241 ro=1 rfsmo=0.5 rfcuto=1.8
TESTMOL lmmc --fit no2
        lmmc --atom no2
        lmmc -vnit=20 no2 --pr60
CLEAN   rm -f ctrl.no2 h1.no2 h2.no2 log.no2 mxi.no2 mxs.no2 p1.no2 p2.no2 pd.no2 save.no2 st.no2 t1.no2 t2.no2
        rm -f fort.71
HEADER  Nitrogen dioxide
CONST   p=12 ndiv=4 nabc=ndiv*p conv=1d-6 convc=1d-5
        dabc=0.3 nbz=60 alfsi=0.003 nalf=16 ndust=2 ncupl=8 nit={nit} 
        d=1.193/0.529 angle=134.1 theta=(90-angle/2)*pi/180
        rsmfa=0
        lmxb=219
        eb1=-1 eb2=-2 eb3=-3
        fs=0.048377 K=1/0.6333328d-5
VERS    LMMC-2.0 MOL:3 LM:7 ASA:7 
TCF     NBISI=12 40 nbz NALF=nalf ADEC=1 NCUPL=ncupl NDUST=ndust
        WZTCF=0
STR     NBISI=12 40 nbz NALF=nalf ADEC=1 NCUPL=ncupl NDUST=ndust
        WZTCF=0
IO      SHOW={show} HELP={help} VERBOS={verb} WKP=F IACTIV=F TIM=F
OPTIONS REL={rel} NSPIN={nsp} RQUAD=2
        XCFUN={xcf} GGA={GGA} TCHK=f XCQS={xcqs}
HAM     FORCES=1 XCFUN={xcf} GGA={GGA} ALFSI=alfsi FRZWF={frz} NSPIN={nsp} REL={rel}
        EBAS=eb1 eb2 eb3 FTMESH=nabc DABC=dabc DQVAL=0
% if dyn==1
DYN     MD:{dyn},{tstep}/fs,{temp}/K,{reltime}/fs,{time}/fs
% elseif relax>0
DYN     MSTAT:{relax},{hess},{xtol},{gtol},{step} NIT={nitf}
% endif
STRUC   NBAS=3 NL=4 NSPEC=2 ALAT=1 PLAT=p 0 0 0 p 0  0 0 p
SPEC

        ATOM=O Z=8 LMXB=lmxb LMXA=3 LMXL=3 NR=205 RSMFA=rsmfa  A=0.03
% if gga==0
        EREF={xcf==1?-149.16644:(xcf==2?-149.19168:-149.16093)}
% elseif gga==1
        EREF=-149.60588
% elseif gga==2
        EREF=-150.22188
% elseif gga==3
        EREF=-150.11514
% endif
        LXI={lxio}  EXI=-3   -5 -8   -11 -14
        R={ro} RSMG={ro}*{rfsmo} RINT=7 RCUT={ro}*{rfcuto} RHAM=4 
        ISOTOPE=16 NCOR=2
        COLOUR=0.2 0.2 1
           P=2.79  2.78  3.23 4.11 
           Q=2 4 0 0 
        MMOM=0 0 0 0

% const rn=1
        ATOM=N Z=7 LMXB=lmxb LMXA=3 LMXL=3 NR=205 RSMFA=rsmfa  A=0.03
% if gga==0
        EREF={xcf==1?-108.33651:(xcf==2?-108.333746:-108.33153)}
% elseif gga==1
        EREF=-108.74195
% elseif gga==2
        EREF=-109.22138
% elseif gga==3
        EREF=-109.13555
% endif
        LXI={lxio}  EXI=-3   -5 -8   -11 -14
        R={rn} RSMG={rn}/2 RINT=7 RCUT={rn}*1.8 RHAM=4
        ISOTOPE=14 COLOUR=0.2 1 0.2
           P=2.79  2.78  3.23 4.11 
           Q=2 3 0 0 
        MMOM=0 -1 0 0

SITE    
        ATOM=N  POS=  0     0     0
        ATOM=O  POS=  d*cos(theta) 0  d*sin(theta)
        ATOM=O  POS= -d*cos(theta) 0  d*sin(theta)

ITER    MIX=A0,b={beta1},bv={beta2} NIT={nit} CONV={etol} CONVC={qrtol1}
MIX     MODE=A0,b={beta1},bv={beta2} QTOLSP={qrtol1} QTOLI={qrtol2} 
# ITER    BETASP={beta1} BETAI={beta2} QTOLSP={qrtol1} QTOLI={qrtol2} CONV={etol} NIT={nit}
# MIX     BETASP={beta1} BETAI={beta2} QTOLSP={qrtol1} QTOLI={qrtol2} CONV={etol}
START   NIT={nit} CNVG=1d-5

