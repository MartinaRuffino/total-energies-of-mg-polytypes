#       for V7
        NSPIN=1 REL=t QASA=3
        GMAX=7
# rdcmd '-f:#rdcmd:%2f' -cat:TEST --noerr ctrl.jell  >& out
TEST    lmstr jell
        lm -vnit=0 -vrho=.001 --show --iactiv=no jell > out.jell
        lm -vnit=1 -vrho=.001 --iactiv=no jell >> out.jell
TESTFP  rm -r mixm.jell
        lmfa -vnit=10 -vasa=0 jell --rs=0,0 -vrho=.001 -vzbak='-1000*rho'
        lmf -vnit=10 -vasa=0 jell --rs=0,0 -vrho=.001 -vzbak='-1000*rho'
        echo 40 20 0 .5 | pldos -fplot -lst=1 dos.jell 
