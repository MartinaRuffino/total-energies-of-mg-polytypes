# For scalar
TESTLM  lmstr si --iactiv=no
        lm -vnit=0 si --iactiv=no
        lm -vnit=15 si --iactiv=no
        echo continue fit, reading results from first 15 iterations ...
        cp vext0.si vext.si 
        lm -vnit=5 si --iactiv=no
# For MPIK
TESTMPI lmstr si --iactiv=no
        lm -vnit=0 si --iactiv=no
        mpirun -n 4 lm -vnit=15 si --iactiv=no
        echo continue fit, reading results from first 15 iterations ...
        cp vext0.si vext.si 
        mpirun -n 4 lm -vnit=5 si --iactiv=no
