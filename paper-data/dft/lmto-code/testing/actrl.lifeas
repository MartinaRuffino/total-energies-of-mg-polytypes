# Autogenerated from init.lifeas using:
# blm --molstat --dhftol=5 --ewald=1d-12 --fpandasa --gw --wsitex lifeas

# Variables entering into expressions parsed by input
% const nit=10 asa=0
% const met=(asa?1:5)
% const so=0 nsp=so?2:1
% const lxcf=2 lxcf1=0 lxcf2=0     # for PBE use: lxcf=0 lxcf1=101 lxcf2=130
% const pwmode=0 pwemax=3          # Use pwmode=1 or 11 to add APWs
% const sig=12 gwemax=2.31 gcutb=3.0 gcutx=2.4  # GW-specific
% const ccor=T sx=0 gamma=sx scr=4 # ASA-specific
% const nkabc=0 nkgw=nkabc gmax=0 beta=.3
% const conv=1e-5 convc=3e-5 dhftol=5

VERS  LM:7 FP:7 ASA:7
IO    SHOW=f HELP=f IACTIV=f VERBOS=35,35  OUTPUT=*
EXPRESS
# Lattice vectors and site positions
  file=   site

# Basis set
  gmax=   {gmax}                   # PW cutoff for charge density
  autobas[pnu=1 loc=1 mto=4 lmto=5 gw=1 pfloat=2,1]

# Self-consistency
  nit=    {abs(nit)}               # Maximum number of iterations
  mix=    B2,b={beta},k=7          # Charge density mixing parameters
  conv=   {conv}                   # Convergence tolerance (energy)
  convc=  {convc}                  # tolerance in RMS (output-input) density
  dhftol= {dhftol}                 # tolerance in correction to Harris Forces

# Brillouin zone
  nkabc=  {nkabc}                  # 1 to 3 values
  metal=  {met}                    # Management of k-point integration weights in metals

# Potential
  nspin=  {nsp}                    # 2 for spin polarized calculations
  so=     {so}                     # 1 turns on spin-orbit coupling
  xcfun=  {lxcf},{lxcf1},{lxcf2}   # set lxcf=0 for libxc functionals

#SYMGRP i r4z::(1/2,0,0) mx::(1/2,0,0)
HAM
      PWMODE={pwmode} PWEMIN=0 PWEMAX={pwemax} OVEPS=0 # For APW addition to basis
      FORCES={so==0} ELIND=-0.7 
      RDSIG={sig} SIGP[EMAX={gwemax}]  # Add self-energy to LDA

OPTIONS
      ASA[ CCOR={ccor} TWOC=F ADNF=F GAMMA={gamma}] SCR={scr} SX={sx}
EWALD TOL=1e-12
GW    NKABC={nkgw} GCUTB={gcutb} GCUTX={gcutx} DELRE=.01 .1
      GSMEAR=0.003 PBTOL=3e-4,3e-4,1e-3

SPEC 
# SCLWSR=11 WSRMAX=3.3 OMAX1=0.10 0.10 0.10
  ATOM=Li       Z=  3  R= 2.939747  LMX=3 LMXA=4  IDXDN=0,0,0,2
  ATOM=Fe       Z= 26  R= 2.438305  LMX=3 LMXA=4  IDXDN=0,0,0,2 PZ=0,0,4.4
  ATOM=As       Z= 33  R= 2.557135  LMX=3 LMXA=4  IDXDN=0,0,0,2
% ifdef minx
DYN     MSTAT[MODE=6 HESS=t XTOL=.001 GTOL=0 STEP=.010 NKILL=0] NIT={minx}
% endif

START CNTROL={nit<=0} BEGMOM={nit<=0}
