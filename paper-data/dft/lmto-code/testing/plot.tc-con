# This is an fplot script to draw contours generated by the following command:
# Generate with 
# lmstr tc --plot:con -vgmode=1 --edge=12 --iactiv=no --ikap=1
# lmstr tc --plot:smh:con -vgmode=1 --edge=12 --iactiv=no --ikap=1
# You can also make line plots.  The following generates data files for unscreened and screened sm Hankels
# Plot the O atom; use --atom=1 for Cu
# lmstr tc --plot:line:-10,-10,-10,10,10,10 -vgmode=1 --edge=12 --iactiv=no --ikap=1 --atom=2
# mv plot.tc plot.x
# lmstr tc --plot:smh:line:-10,-10,-10,10,10,10 -vgmode=1 --edge=12 --iactiv=no --ikap=1 --atom=2
# set i = 4,6,10
# fplg -y -1,1 -colsy $i plot.tc -lt 2,col=1,0,0 -colsy $i plot.tc
# fplg -frme:ly 0,1,0,1 -fmtny:%e -colsy $i -ord 'abs(y)' -map -inc 'abs(y)>1e-6' 1:nr plot.tc -lt 2,col=1,0,0 -colsy $i -ord 'abs(y)' -map -inc 'abs(y)>1e-6' 1:nr plot.x

fplot
  -noxn -noyn
    -lt 1,col=1.,0,.0  -con 1d0  -qr plot.tc
    -lt 1,col=.8,0,.2  -con 1d-1 -qr plot.tc
    -lt 1,col=.6,0,.4  -con 1d-2 -qr plot.tc
    -lt 1,col=.4,0,.6  -con 1d-3 -qr plot.tc
    -lt 1,col=.2,0,.8  -con 1d-4 -qr plot.tc
    -lt 1,col=.0,0,1.  -con 1d-5 -qr plot.tc
    -lt 1,col=.0,0,0.  -con 1d-6 -qr plot.tc

    -lt 1,col=0,1.,.0  -con -1d0  -qr plot.tc
    -lt 1,col=0,.8,.2  -con -1d-1 -qr plot.tc
    -lt 1,col=0,.6,.4  -con -1d-2 -qr plot.tc
    -lt 1,col=0,.4,.6  -con -1d-3 -qr plot.tc
    -lt 1,col=0,.2,.8  -con -1d-4 -qr plot.tc
#    -lt 1,col=0,.0,1.  -con -1d-5 -qr plot.tc
    -lt 1,col=.5,.5,.5   -con -1d-6 -qr plot.tc

