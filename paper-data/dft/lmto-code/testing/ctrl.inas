  ATOM=In       Z= 49  R= 2.508230                  LMX=4 LMXA=4 PZ=0,0,5.4
  ATOM=As       Z= 33  R= 2.441105                  LMX=4 LMXA=4#  PZ=0,0,3.9
  ATOM=E        Z=  0  R= 2.508230*{(les==11)?0:1}  LMX=2 LMXA=4
  ATOM=E1       Z=  0  R= 2.441105*{(les==11)?0:1}  LMX=2 LMXA=4
