DYN     MSTAT[MODE=6 HESS=t XTOL=.001 GTOL=0 STEP=.003 NKILL=-1] NIT=4
DYN     MSTAT[MODE=6 HESS=t XTOL=.001 GTOL=0 STEP=.003 NKILL=0] NIT=10
