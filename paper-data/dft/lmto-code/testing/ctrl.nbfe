# Autogenerated from init.nbfe using:
# /h/ms4/lm/blm --molstat --ewald=1d-10 --rdsite --omax=0 --nosort --shorten=no --nit=20 --nk=6,6,6 --gmax=8 --ctrl=ctrl nbfe

# Variables entering into expressions parsed by input
% const nit=20
% const met=5
% const so=0 nsp=so?2:1
% const lxcf=2 lxcf1=0 lxcf2=0     # for PBE use: lxcf=0 lxcf1=101 lxcf2=130
% const pwmode=0 pwemax=3          # Use pwmode=1 or 11 to add APWs
% const nk1=6 nk2=6 nk3=6 gmax=8 beta=.3 frzwf=f

VERS  LM:7 FP:7 # ASA:7
IO    SHOW=f HELP=f IACTIV=f VERBOS=35,35  OUTPUT=*
EXPRESS
# Lattice vectors and site positions
  file=   site

# Basis set
  gmax=   {gmax}                   # PW cutoff for charge density
  autobas[pnu=1 loc=1 mto=4 lmto=4]

# Self-consistency
  nit=    {nit}                    # Maximum number of iterations
  mix=    B2,b={beta},k=7          # Charge density mixing parameters
  # conv=   1e-4/3                     # Convergence tolerance (energy)
  # convc=  1e-3/3                     # tolerance in RMS (output-input) density

  # conv=   1e-5/10                    # Convergence tolerance (energy)
  # convc=  3e-5/10                     # tolerance in RMS (output-input) density

  conv=   1e-5                     # Convergence tolerance (energy)
  convc=  3e-5                     # tolerance in RMS (output-input) density
  dhftol= 45

# Brillouin zone
  nkabc=  {nk1},{nk2},{nk3}        # 1 to 3 values
  metal=  {met}                    # Management of k-point integration weights in metals

# Potential
  nspin=  {nsp}                    # 2 for spin polarized calculations
  so=     {so}                     # 1 turns on spin-orbit coupling
  xcfun=  {lxcf},{lxcf1},{lxcf2}   # set lxcf=0 for libxc functionals

SYMGRP  find
HAM
      PWMODE={pwmode} PWEMIN=0 PWEMAX={pwemax} OVEPS=0 # For APW addition to basis
      FORCES={so==0} ELIND=-0.7 
      FRZWF={frzwf}                # Freeze phi,dot
EWALD TOL=1e-10
SPEC 
  ATOM=Nb       Z= 41  R= 2.695937  LMX=3 LMXA=4
  ATOM=Fe       Z= 26  R= 2.340001  LMX=3 LMXA=4 MMOM=0,0,2.2 PZ=0,0,4.4
