HEADER    Cr3Si6, hexagonal
Notes
  To test nonspherical moments, run at least twice through.
  Each time will generate qpp file closer to self-consistent one.
  lm cr3si6 -vnsph=1 -vnit=0
TSTPDOS   lm cr3si6 -vmet=2 -vnsph=1 -vnit=1 --iactiv=no --quit=band
          lmdos --dos:npts=501:window=-.8,.5 cr3si6
	  cp dos.cr3si6 pdos.class.cr3si6
          lm --pr31 cr3si6 -vmet=2 -vnsph=1 --iactiv=no --quit=band '--pdos~mode=1~group=1:3;4:9~lcut=2,1'
          lmdos --dos:npts=501:window=-.8,.5 cr3si6 '--pdos~mode=1~group=1:3;4:9~lcut=2,1'
	  cp dos.cr3si6 pdos.site.cr3si6
TESTLM    lm --pr31 -vlmarq=2 cr3si6 -vmet=2 -vnsph=1 -vnit=5 --iactiv=no '--pdos~mode=1~group=1:3;4:9~lcut=2,1'
# Which one works depends on the mpirun script
TSTLMP    mpirun -n 8 lm --pr31 -vlmarq=2 cr3si6 -vmet=2 -vnsph=1 -vnit=5 --iactiv=no '--pdos~mode=1~group=1:3;4:9~lcut=2,1'
TSTLMP    mpirun -n 8 lm --pr31 -vlmarq=2 cr3si6 -vmet=2 -vnsph=1 -vnit=5 --iactiv=no "'--pdos~mode=1~group=1:3;4:9~lcut=2,1'"
PLDOS     echo 15 7 -.8 0.5 | pldos -ef=0 -fplot -lst="1;2;3;4;5;6" pdos.class.cr3si6
          fplot -pr10 -f plot.dos
          cp dosp.dat dosp.class.cr3si6
          echo 45 7 -.8 0.5 | pldos -ef=0 -fplot -lst="1;2;3;4;5" pdos.site.cr3si6
          fplot -pr10 -f plot.dos
          cp dosp.dat dosp.site.cr3si6
PLFPDOS   echo 45 7 -.8 0.5 | pldos -ef=0 -fplot -lst="1;2;3;4;5" pdos.site.cr3si6
          cp dosp.dat dosp.asa
          gunzip  -c fp/test/pdos.cr3si6.gz  >pdos.fp.cr3si6
          echo 45 7 -.8 0.5 | pldos -ef=0 -fplot -lst="1;2;3;4;5" pdos.fp.cr3si6
          cp dosp.dat dosp.fp
          fplot -pr10 -f testing/plot.cr3si6-dos
