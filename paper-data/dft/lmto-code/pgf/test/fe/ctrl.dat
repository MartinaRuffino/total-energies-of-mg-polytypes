lmpg -vvesi=.2 -vnl=1
# Fe + potential by PL: 0 0 .1 .1 .1 .1 .05 .05
% const vesi=0 nk1=2 ef0=0 nz=10 pgf=1 sparse=0 ldau=0
PGF     MODE={pgf} SPARSE={sparse} PLATL=0 0 2*ha PLATR=0 0 2*ha
        GFOPTS= pdos;p3
        GFOPTS= pdos;findef:nw
VERS    LMASA-6.1 LM:7 ASA:7
IO      SHOW=f HELP=F VERBOS=31 20 WKP=f IACTIV=t
ITER    MIX=B6,w=2,1,b=.2,n=4;A6,w=1,2,n=4 XIPMX=t BETV=.03 NIT=1 CONVC=1D-6 CONV=0
        AMIX=A,w=0,0,wa=1,fn=ma,n=2,b=1
MIX     MODE=B6,w=2,1,b=.2,n=4;A6,w=1,2,n=4 XIPMX=t BETV=.03
        AMODE=A,w=0,0,wa=1,fn=ma,n=2,b=1
SOLVE   SMODE=0 TOL=.01 H=.01 EEPS=1d-5 VAR=hi
CONST   a=5.44 nb=6 fm=1
        pi4b3=4*pi/3
        nit=200 beta=.3 betv=.015 nv1=1 nv2=-6

        hb=.5 ha=.5*1^3 hi=(ha+hb)/2
# use the following for extended planes on rhs
%ifdef extended
        hc=2*hi+(10-1)*ha+hb*(10-1) nplane=2+14+4 hi=(ha+hb)/2
%endif
        hc=2*hi+(8-1)*ha+hb*(6-1)  nplane=14 hi=(ha+hb)/2

        vola=a^3*ha                   volb=a^3*hb
        Ra=(vola/pi4b3)^(1/3)         Rb=(volb/pi4b3)^(1/3)
        delV=(2*hi-ha-hb)*a^3/4/pi4b3 hend=hc-hi
        Rai=(delV+Ra^3)^(1/3)         Rbi=(delV+Rb^3)^(1/3)

    bzj=11 rwa=1 rwb=1 nsp=1
    zb0=ha*7+hi-hb

OPTIONS NSPIN=nsp REL=t INVIT=t XCN=11 TPAN=t ASA[ TWOC=0 F ELIN=-.10 ]
        Q=BAND
% const udiag=t
HAM     UDIAG={udiag} NSPIN=nsp REL=t QASA=0
EWALD   TOL=1d-12 NKDMX=1500 NKRMX=1500
SYMGRP  MX MY R4Z
BZ      NKABC={nk1} {nk1} 1 BZJOB=0 NKABC2=3 BZJOB2=0
        TETRA=f METAL=1 DOS=-.8 .8 EF0={ef0} DELEF=.001
        NEVMX=-1 GETQP=f

# for DOS, PGF
% if pgf==1|pgf==5
        EMESH=200/1 0 -.8 1 0.002
% endif
# for bands, PGF
% if pgf==3
        EMESH=400 0 -.8 1 0
% endif
# for integrated properties, PGF
        EMESH={nz} 10 -.8 {ef0} .5
BZ      NKABC=4 4 8 BZJOB=bzj NKABC2=3 BZJOB2=0
        TETRA=t METAL=1 DOS=-.8 .8 EF0=0 DELEF=.001
        NEVMX=-1
STR     RMAX=2.7 MODE=0 SHOW=T EQUIV=t


% const nl=3
STRUC   NBAS=nplane*1 NSPEC=4 NL={nl} TET=1
        ALAT=a PLAT= 1 0 0   0 1 0   0 0 hc*1
CLASS
 ATOM=XA1 Z=26 IDMOD=0 0 0 EREF=-2540.5681 GROUP=1
  R=Rai*rwa LMXB=221 LMXF=4 NR=601 A=.02 GRP2=1
  IDU= 0 0 {ldau?2:0}  UH= 0 0 0.1 JH= 0 0 0
 ATOM=XA2 Z=26 IDMOD=0 0 0 EREF=-2540.5681 GROUP=2
  R=Ra*rwa LMXB=221 LMXF=4 NR=601 A=.02 GRP2=2
  IDU= 0 0 {ldau?2:0}  UH= 0 0 0.1 JH= 0 0 0
 ATOM=XA3 Z=26 IDMOD=0 0 0 EREF=-2540.5681 GROUP=3
  R=Ra*rwa LMXB=221 LMXF=4 NR=601 A=.02 GRP2=3
  IDU= 0 0 {ldau?2:0}  UH= 0 0 0.1 JH= 0 0 0
# ATOM=XA4 Z=26 IDMOD=0 0 0 EREF=-2540.5681 GROUP=4
#  R=Ra*rwa LMXB=221 LMXF=4 NR=601 A=.02 GRP2=4
#  IDU= 0 0 {ldau?2:0}  UH= 0 0 0.1 JH= 0 0 0
 ATOM=XB1 Z=26 IDMOD=0 0 0 EREF=-2540.5681 GROUP=-1
  R=Rbi*rwb LMXB=221 LMXF=4 NR=601 A=.02 GRP2=5.5
  IDU= 0 0 {ldau?2:0}  UH= 0 0 0.1 JH= 0 0 0
 ATOM=XB2 Z=26 IDMOD=0 0 0 EREF=-2540.5681 GROUP=-2
  R=Rb*rwb LMXB=221 LMXF=4 NR=601 A=.02 GRP2=6.5
  IDU= 0 0 {ldau?2:0}  UH= 0 0 0.1 JH= 0 0 0
 ATOM=XB3 Z=26 IDMOD=0 0 0 EREF=-2540.5681 GROUP=-3
  R=Rb*rwb LMXB=221 LMXF=4 NR=601 A=.02 GRP2=7.5
  IDU= 0 0 {ldau?2:0}  UH= 0 0 0.1 JH= 0 0 0

% const plv=1
% ifdef extended
SITE
 ATOM=XA1  POS= 0/2 0/2 hc*0+ha*2 PL=0
 ATOM=XA1  POS= 1/2 1/2 hc*0+ha*3 PL=0

 ATOM=XA1  POS= 0/2 0/2 hc*0+ha*4 PL=0+1
 ATOM=XA1  POS= 1/2 1/2 hc*0+ha*5 PL=0+1
 ATOM=XA1  POS= 0/2 0/2 hc*0+ha*6 PL=1+1
 ATOM=XA1  POS= 1/2 1/2 hc*0+ha*7 PL=1+1

 ATOM=XB1 POS= 0/2 0/2 hc*0+hb*0+ha*7+hi PL=2+1 PLV={plv}
 ATOM=XB1 POS= 1/2 1/2 hc*0+hb*1+ha*7+hi PL=2+1 PLV={plv}
 ATOM=XB1 POS= 0/2 0/2 hc*0+hb*2+ha*7+hi PL=3+1 PLV={plv}
 ATOM=XB1 POS= 1/2 1/2 hc*0+hb*3+ha*7+hi PL=3+1 PLV={plv}
 ATOM=XB1 POS= 0/2 0/2 hc*0+hb*4+ha*7+hi PL=4+1 PLV={plv}
 ATOM=XB1 POS= 1/2 1/2 hc*0+hb*5+ha*7+hi PL=4+1 PLV={plv}

 ATOM=XA2  POS= 0/2 0/2 hc*0+hb*5+ha*7+2*hi  PL=5+1  PLV={plv}
 ATOM=XA2  POS= 1/2 1/2 hc*0+hb*5+ha*8+2*hi  PL=5+1  PLV={plv}
 ATOM=XA3  POS= 0/2 0/2 hc*0+hb*5+ha*9+2*hi  PL=6+1
 ATOM=XA3  POS= 1/2 1/2 hc*0+hb*5+ha*10+2*hi PL=6+1
 ATOM=XA3  POS= 0/2 0/2 hc*0+hb*5+ha*11+2*hi PL=7+1
 ATOM=XA3  POS= 1/2 1/2 hc*0+hb*5+ha*12+2*hi PL=7+1
 ATOM=XA3  POS= 0/2 0/2 hc*0+hb*5+ha*13+2*hi PL=8+1
 ATOM=XA3  POS= 1/2 1/2 hc*0+hb*5+ha*14+2*hi PL=8+1
% else
SITE
 ATOM=XA1  POS= 0/2 0/2 hc*0+ha*4 PL=0
 ATOM=XA1  POS= 1/2 1/2 hc*0+ha*5 PL=0
 ATOM=XA1  POS= 0/2 0/2 hc*0+ha*6 PL=1
 ATOM=XA1  POS= 1/2 1/2 hc*0+ha*7 PL=1

 ATOM=XB1 POS= 0/2 0/2 hc*0+hb*0+ha*7+hi PL=2 PLV={plv}
 ATOM=XB1 POS= 1/2 1/2 hc*0+hb*1+ha*7+hi PL=2 PLV={plv}
 ATOM=XB1 POS= 0/2 0/2 hc*0+hb*2+ha*7+hi PL=3 PLV={plv}
 ATOM=XB1 POS= 1/2 1/2 hc*0+hb*3+ha*7+hi PL=3 PLV={plv}
 ATOM=XB1 POS= 0/2 0/2 hc*0+hb*4+ha*7+hi PL=4 PLV={plv}
 ATOM=XB1 POS= 1/2 1/2 hc*0+hb*5+ha*7+hi PL=4 PLV={plv}

 ATOM=XA2  POS= 0/2 0/2 hc*0+ha*0 PL=5  PLV={plv}
 ATOM=XA2  POS= 1/2 1/2 hc*0+ha*1 PL=5  PLV={plv}
 ATOM=XA3  POS= 0/2 0/2 hc*0+ha*2 PL=6
 ATOM=XA3  POS= 1/2 1/2 hc*0+ha*3 PL=6
% endif

START   NIT=1 FREE=F BEGMOM=F CNTROL=t CNVG=1D-6 RDVES=T
        ATOM=XA1  V={0}
        ATOM=XA12 V={0}
        ATOM=XA13 V={0}
        ATOM=XA14 V={0}
        ATOM=XA2  V={vesi}
        ATOM=XA22 V={vesi}
        ATOM=XB1  V={vesi}
        ATOM=XB12 V={vesi}
        ATOM=XB13 V={vesi}
        ATOM=XB14 V={vesi}
        ATOM=XB15 V={vesi}
        ATOM=XB16 V={vesi}
        ATOM=XA3  V={vesi/2}
% repeat i=2:10
        ATOM=XA3{i} V={vesi/2}
% end

